doctype html

html(lang="en")
head
    title Data Analysis for WIKI articles
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js") //CDN for Jquery
    script(src="//code.jquery.com/ui/1.10.4/jquery-ui.js")
    script(src="https://www.gstatic.com/charts/loader.js") //CDN for Google Chart
    script(src="main.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js")
    link(rel='stylesheet'
         type='text/css'
         href='css/main.css'
         media='screen')
    link(rel='stylesheet'
         type='text/css'
         href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
         media='screen')
    link(rel="stylesheet" href="//apps.bdimg.com/libs/jqueryui/1.10.4/css/jquery-ui.min.css")


body(data-spy='scroll', data-target='#myScrollspy', data-offset='15')
     
     
      h1#top_area  Data Analysis Web Application
      br
      br
      br
      br
      br
      div.container
        div.row
            nav#myScrollspy.col-sm-2
                ul#navlist.nav.nav-pills.nav-stacked(data-spy='affix', data-offset-top='205')
                    li.active
                        a(href='#top_area') TOP
                    li
                        a(href='#section1') OverView
                    li
                        a(href='#section2') Individual
	        
            div.col-sm-10
		    
              table
                tr
                    td
                        div#section1
		      
                            h3  Overview
                            div.list-group
                                a.list-group-item.active The articles with highest number of revisions:

                                a#mostRevs.list-group-item

                                a.list-group-item.active The articles with lowest number of revisions:

                                a#leastRevs.list-group-item

                                a.list-group-item
                                    input#revNumInput.col-sm-10(type='text' placeholder='The number of articles for highest and lowest number of revisions to display')
                                    button#revNumBtn.btn.btn-info Change

                                a.list-group-item.active The article edited by largest group of registered users:

                                a#largeGp.list-group-item
		
                                a.list-group-item.active The article edited by smallest groups of registered users:

                                a#smallGp.list-group-item

                                a.list-group-item.active The top 3 articles with the longest history (measured by age):

                                a#longHis.list-group-item
		
                                a.list-group-item.active The article with the shortest history (measured by age):

                                a#shortHis.list-group-item
                            hr
		            
                            select#chartList
                                option(value=-1) Select The Chart Type
                                option(value=0) Barchart
                                option(value=1) Piechart
		
                        div#overallChart
		            
                        hr
                tr
                    td   
                        div#section2
                            h3 Individual    
		            
                            select#articleList
                                option(value=-1) Select Article
                            br
                            label(for='titleInput') Title
                            input#titleInput(type='text' placeholder='Enter article title here...')
                            button#titleBtn.btn.btn-info Select
                            br
		            
                            ul.list-group
                                li.list-group-item
                                    p#SelectedTitle Title:
                                li.list-group-item  
                                    p#SelectedRevisions Total number of revisions:
                                li.list-group-item
                                    p#SelectedTop5 Top 5 users:
		            
                            hr
		          
                            select#chartType
                                option(value=-1) Select Chart Type
                                option(value=0) Bar Chart1
                                option(value=1) Pie Chart1
                                option(value=3) Bar Chart2
                            div#checkboxArea
                            br
                            input(type='button' value='Get the chart')#submit
		                   
                            div#IndividualChart
			               
		
	
	
	
	
	
	
	
